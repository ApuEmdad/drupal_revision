{% if content.field_banner_image %}
{% set image_url =file_url(content.field_banner_image['#items'].entity.uri.value) %}
{% endif %}

<div class="container banner d-flex flex-column justify-content-center"
	style=" background-image: linear-gradient( -90deg, rgba(173, 173, 173, 0.01), rgb(107, 76, 76) ), url('{{ image_url }}'); ">
	<div class="w-50 ms-4">
		<div class="">
			<h1 class="text-white">
				{{ content.field_banner_title }}
			</h1>
			<div class="text-white my-5">
				{{ content.field_banner_description }}
			</div>
		</div>

		<form class="d-flex">
			<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
			<button class="btn btn-danger" type="submit">Search</button>
		</form>
	</div>
</div>